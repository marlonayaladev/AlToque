<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Tema principal de tu app (sin cambios) -->
    <style name="Theme.AlToque" parent="android:Theme.Material.Light.NoActionBar" />

    <!--
        TEMA PARA LA SPLASH ACTIVITY (VERSIÓN A PRUEBA DE ERRORES)
        Usamos "Theme.SplashScreen" que es el más básico y no debería fallar.
    -->
    <style name="Theme.App.Splash" parent="Theme.SplashScreen">
        <!-- Color de fondo de la ventana -->
        <item name="windowSplashScreenBackground">@android:color/black</item>

        <!-- Duración del ícono (lo ponemos a 0 para que no se vea) -->
        <item name="windowSplashScreenAnimationDuration">0</item>

        <!-- Ícono del sistema (lo dejamos transparente por si acaso) -->
        <item name="windowSplashScreenAnimatedIcon">@android:color/transparent</item>

        <!-- Tema que se usará DESPUÉS de la splash screen -->
        <item name="postSplashScreenTheme">@style/Theme.AlToque</item>
    </style>

</resources>