<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#333333">

    <!-- Header -->
    <RelativeLayout
        android:id="@+id/headerLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Modo Trabajador"
            android:textColor="#AAAAAA"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_centerVertical="true"/>

        <!-- Icono para volver a modo usuario -->
        <ImageView
            android:id="@+id/btnVolverUsuario"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_trabajador"
            app:tint="#00BCD4" />

    </RelativeLayout>

    <!-- Línea separadora -->
    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/headerLayout"
        android:background="#555555" />

    <!-- Título SOLICITUDES -->
    <TextView
        android:id="@+id/tvSolicitudes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/divider"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:text="SOLICITUDES"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:textStyle="bold" />

    <!-- Tarjeta de Solicitud (Charisard) -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardRequest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvSolicitudes"
        android:layout_marginTop="24dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:cardCornerRadius="24dp"
        app:cardBackgroundColor="#4DD0E1"
        app:cardElevation="4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <!-- Foto Avatar -->
            <ImageView
                android:id="@+id/ivAvatar"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_user"
                android:background="@drawable/bg_circle_white"
                android:padding="2dp"/>

            <!-- Nombre y Hora -->
            <TextView
                android:id="@+id/tvName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/ivAvatar"
                android:layout_marginStart="12dp"
                android:text="CHARISARD"
                android:textStyle="bold"
                android:textColor="#000000"
                android:textSize="14sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:text="10:58 a.m."
                android:textStyle="bold"
                android:textColor="#000000"
                android:textSize="12sp"/>

            <!-- Descripción -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvName"
                android:layout_toEndOf="@id/ivAvatar"
                android:layout_marginStart="12dp"
                android:layout_marginTop="4dp"
                android:text="Requiere tu servicio de electricista"
                android:textStyle="bold"
                android:textColor="#000000"
                android:textSize="14sp"/>

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <!-- Barra inferior de navegación -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:background="#DDDDDD"
        android:gravity="center"
        android:orientation="horizontal"
        android:elevation="8dp">

        <!-- Chat -->
        <ImageView
            android:id="@+id/navChat"
            android:layout_width="0dp"
            android:layout_height="28dp"
            android:layout_weight="1"
            android:src="@drawable/ic_chat_inicio"
            app:tint="#000000" />

        <!-- Perfil (Centro) -->
        <ImageView
            android:id="@+id/navProfile"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:layout_weight="1"
            android:src="@drawable/ic_user"


        <!-- Notificaciones -->
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center">

            <ImageView
                android:id="@+id/navNotifications"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/ic_notifications"
                app:tint="#000000" />

            <TextView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_alignTop="@id/navNotifications"
                android:layout_alignEnd="@id/navNotifications"
                android:layout_marginTop="-4dp"
                android:layout_marginEnd="-4dp"
                android:background="@drawable/bg_badge_cyan"
                android:backgroundTint="#FF0000"
                android:gravity="center"
                android:text="1"
                android:textColor="#FFFFFF"
                android:textSize="10sp"
                android:textStyle="bold" />

        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>