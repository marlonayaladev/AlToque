<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#FFFFFF">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp">

        <TextView
            android:id="@+id/titleForm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TRABAJA CON NOSOTROS"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="#00BCD4"
            android:fontFamily="@font/din_round_pro"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp" />

        <!-- Campos anteriores -->
        <EditText
            android:id="@+id/nombreEditText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Nombre completo"
            android:inputType="textPersonName"
            android:background="@android:drawable/edit_text"
            android:textColor="#000000"
            android:textColorHint="#888888"
            app:layout_constraintTop_toBottomOf="@id/titleForm"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="24dp" />

        <EditText
            android:id="@+id/dniEditText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="DNI"
            android:inputType="number"
            android:background="@android:drawable/edit_text"
            android:textColor="#000000"
            android:textColorHint="#888888"
            app:layout_constraintTop_toBottomOf="@id/nombreEditText"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp" />

        <!-- NUEVO CAMPO: Celular -->
        <EditText
            android:id="@+id/celularEditText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="NÃºmero de Celular"
            android:inputType="phone"
            android:background="@android:drawable/edit_text"
            android:textColor="#000000"
            android:textColorHint="#888888"
            app:layout_constraintTop_toBottomOf="@id/dniEditText"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp" />

        <EditText
            android:id="@+id/fechaNacimientoEditText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Fecha de nacimiento (YYYY-MM-DD)"
            android:inputType="none"
            android:focusable="false"
            android:clickable="true"
            android:background="@android:drawable/edit_text"
            android:textColor="#000000"
            android:textColorHint="#888888"
            app:layout_constraintTop_toBottomOf="@id/celularEditText"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp" />

        <EditText
            android:id="@+id/correoEditText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Correo electrÃ³nico"
            android:inputType="textEmailAddress"
            android:background="@android:drawable/edit_text"
            android:textColor="#000000"
            android:textColorHint="#888888"
            app:layout_constraintTop_toBottomOf="@id/fechaNacimientoEditText"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp" />

        <!-- NUEVOS CAMPOS -->
        <TextView
            android:id="@+id/lblServicio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Servicio que realizas"
            android:textColor="#000000"
            android:textStyle="bold"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/correoEditText"
            app:layout_constraintStart_toStartOf="parent"/>

        <Spinner
            android:id="@+id/spinnerServicio"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:background="@drawable/bg_edittext"
            app:layout_constraintTop_toBottomOf="@id/lblServicio"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp"/>

        <TextView
            android:id="@+id/lblLicencia"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Si cuentas con una tienda o trabajas para una sube una foto de la licencia municipal o documento que lo valide aquÃ­"
            android:textColor="#000000"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/spinnerServicio"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <Button
            android:id="@+id/btnUploadLicencia"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Subir Licencia ðŸ“¤"
            android:backgroundTint="#FFFFFF"
            android:textColor="#00BCD4"
            android:stateListAnimator="@null"
            style="@style/Widget.AppCompat.Button.Colored"
            app:strokeColor="#00BCD4"
            app:strokeWidth="2dp"
            app:cornerRadius="8dp"
            app:layout_constraintTop_toBottomOf="@id/lblLicencia"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp"/>
            
        <TextView
            android:id="@+id/tvLicenciaStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No seleccionado"
            android:textSize="12sp"
            android:textColor="#888888"
            app:layout_constraintTop_toBottomOf="@id/btnUploadLicencia"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/lblValidacion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Validacion de Seguridad"
            android:textColor="#000000"
            android:textStyle="bold"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/tvLicenciaStatus"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/lblCul"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Sube tu Certificado Unico Laboral (CUL) para validar tus antecedentes. Es gratuito"
            android:textColor="#000000"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/lblValidacion"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <Button
            android:id="@+id/btnUploadCul"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Subir CUL ðŸ“¤"
            android:backgroundTint="#FFFFFF"
            android:textColor="#00BCD4"
            android:stateListAnimator="@null"
            style="@style/Widget.AppCompat.Button.Colored"
            app:strokeColor="#00BCD4"
            app:strokeWidth="2dp"
            app:cornerRadius="8dp"
            app:layout_constraintTop_toBottomOf="@id/lblCul"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp"/>
            
        <TextView
            android:id="@+id/tvCulStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No seleccionado"
            android:textSize="12sp"
            android:textColor="#888888"
            app:layout_constraintTop_toBottomOf="@id/btnUploadCul"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/lblLinkInfo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="No sabes como conseguirlo, presiona el siguiente enlace"
            android:textColor="#000000"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/tvCulStatus"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/linkCul"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="https://www.empleosperu.gob.pe/CertificadoUnicoLaboral/"
            android:textColor="#00BCD4"
            android:autoLink="web"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@id/lblLinkInfo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <Button
            android:id="@+id/btnSiguiente"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Siguiente"
            android:textColor="#FFFFFF"
            android:backgroundTint="#00BCD4"
            android:textStyle="bold"
            android:fontFamily="@font/din_round_pro"
            app:layout_constraintTop_toBottomOf="@id/linkCul"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="32dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
